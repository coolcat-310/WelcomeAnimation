<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="coolcatmeow.org.welcomeanimation.DisplayResumeActivity"
    android:paddingLeft="3dp"
    android:focusableInTouchMode="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/displayFirstName"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/TittleEmail"
        android:layout_alignStart="@+id/TittleEmail"
        android:textIsSelectable="false"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email:"
        android:id="@+id/TittleEmail"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="74dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#982525" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/displayLastName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/displayFirstName"
        android:paddingLeft="3dp"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/displayEmail"
        android:layout_alignTop="@+id/TittleEmail"
        android:layout_alignRight="@+id/displayMajor"
        android:layout_alignEnd="@+id/displayMajor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Phone Number:"
        android:id="@+id/TittlePhoneNumber"
        android:layout_marginTop="36dp"
        android:textColor="#982525"
        android:layout_below="@+id/TittleEmail"
        android:layout_alignLeft="@+id/TittleEmail"
        android:layout_alignStart="@+id/TittleEmail"
        android:textSize="14dp"
        android:paddingRight="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/displayPhone"
        android:layout_alignTop="@+id/TittlePhoneNumber"
        android:layout_alignRight="@+id/displayMajor"
        android:layout_alignEnd="@+id/displayMajor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/displaySchoolName"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/TittlePhoneNumber"
        android:layout_alignStart="@+id/TittlePhoneNumber" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/displayMajor"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/displaySchoolName"
        android:layout_alignStart="@+id/displaySchoolName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Work Histoy"
        android:id="@+id/subTittle"
        android:layout_marginTop="50dp"
        android:textColor="#982525"
        android:layout_below="@+id/displayMajor"
        android:layout_alignLeft="@+id/displayMajor"
        android:layout_alignStart="@+id/displayMajor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/displayCompany"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/subTittle"
        android:layout_alignLeft="@+id/subTittle"
        android:layout_alignStart="@+id/subTittle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/displayPosition"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/displayCompany"
        android:layout_alignLeft="@+id/displayCompany"
        android:layout_alignStart="@+id/displayCompany" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Education History"
        android:id="@+id/textView3"
        android:layout_below="@+id/displayPhone"
        android:layout_alignLeft="@+id/displaySchoolName"
        android:layout_alignStart="@+id/displaySchoolName"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textColor="#982525"/>

</RelativeLayout>
